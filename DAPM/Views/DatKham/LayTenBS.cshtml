
@{
    ViewBag.Title = "LayTenBS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<string>

<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("LayTenBS", "DatKham", FormMethod.Post))
        {@Html.ValidationSummary(true)
        
            <div class="form-group">
                <label for="ngaygio">Ngày giờ:</label> @Html.TextBox("NgayGio", null, new { @class = "form-control", @id = "ngaygio", type = "date", placeholder = "mm/dd/yyyy" })
            </div>
            <div class="form-group">
                <label for="ghichu">Ghi Chú:</label> @Html.TextBox("GhiChu", null, new { @class = "form-control", @id = "ghichu" })
            </div>
            <div class="form-group">
                <p>Tên Bác Sĩ:</p>
                <label for="tenbacsi"></label>
                @Html.ListBox("TenBS", new SelectList(Model), new { @class = "form-control", @id = "tenbacsi", required = "required" })
            </div>


            <button type="submit" class="btn btn-primary">ĐẶT KHÁM</button>
    }
    </div>
</div>


